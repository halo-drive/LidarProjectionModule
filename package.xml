<?xml version="1.0"?>
<package format="2">
    <name>lane_fusion</name>
    <version>1.0.0</version>
    <description>Projection-based LiDAR-camera fusion for lane detection</description>

    <maintainer email="dev@lanefusion.com">Lane Fusion Team</maintainer>
    <license>MIT</license>

    <buildtool_depend>catkin</buildtool_depend>

    <!-- ROS dependencies -->
    <depend>roscpp</depend>
    <depend>rospy</depend>
    <depend>std_msgs</depend>
    <depend>sensor_msgs</depend>
    <depend>geometry_msgs</depend>
    <depend>cv_bridge</depend>
    <depend>image_transport</depend>
    <depend>pcl_ros</depend>
    <depend>velodyne_msgs</depend>
    <depend>message_filters</depend>
    <depend>tf2</depend>
    <depend>tf2_ros</depend>
    <depend>tf2_geometry_msgs</depend>

    <!-- System dependencies -->
    <depend>libopencv-dev</depend>
    <depend>libpcl-dev</depend>
    <depend>libeigen3-dev</depend>

    <!-- Build dependencies -->
    <build_depend>cmake</build_depend>

    <export>
        <build_type>cmake</build_type>
    </export>
</package>
